<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:id="@+id/stepsTodayText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/steps_today_text"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="224dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/goalText"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="@string/goal_text"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/stepsLeftText" android:layout_marginTop="9dp"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toBottomOf="@+id/stepsTodayVal" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/stepsLeftText" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/goalVal"/>

    <TextView
            android:id="@+id/stepsLeftText"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:text="@string/steps_left_text"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/stepsLeftVal"
            app:layout_constraintEnd_toStartOf="@+id/stepsLeftVal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="19dp"
    />

    <TextView
            android:id="@+id/stepsTodayVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/goalVal" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/stepsTodayText"
            app:layout_constraintEnd_toStartOf="@+id/goalVal"/>

    <TextView
            android:id="@+id/goalVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/stepsTodayVal"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/stepsLeftVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/goalVal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleHorizontal"
            android:progress="80"
            android:layout_width="0dp"
            android:layout_height="478dp"
            android:progressDrawable="@drawable/circularprogressbar" android:rotation="90"
            tools:visibility="visible"
            android:visibility="visible" android:layout_marginTop="68dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
    />
    <ProgressBar
            style="?android:progressBarStyleHorizontal"
            android:progress="100"
            android:layout_width="0dp"
            android:layout_height="478dp"
            android:progressDrawable="@drawable/circularprogressbar" android:rotation="90"
            tools:visibility="visible"
            android:visibility="visible" android:layout_marginTop="68dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:id="@+id/progressBarShadow" android:alpha="0.3"/>
    <Button
            android:id="@+id/btnUpdateSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_steps"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>